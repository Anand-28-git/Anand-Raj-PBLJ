import java.util.ArrayList;
import java.util.Scanner;

public class SumUsingAutoboxing {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        ArrayList<Integer> numbers = new ArrayList<>();

        System.out.println("Enter integers (type 'stop' to finish):");

        // Accept string inputs
        while (true) {
            String input = sc.next();

            if (input.equalsIgnoreCase("stop")) {
                break;
            }

            // Parse string to int â†’ Autoboxing happens when added to ArrayList<Integer>
            Integer num = Integer.parseInt(input);
            numbers.add(num);
        }

        // Calculate sum using unboxing
        int sum = 0;
        for (Integer value : numbers) {  
            sum += value;   // unboxing here
        }

        System.out.println("Total Sum = " + sum);
        sc.close();
    }
}
